<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="54dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/twitter_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="81dp"
        android:layout_height="36dp"
        android:text="Sign up"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:textColor="@color/twitter_blue"
        android:textAllCaps="false"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle" />

    <TextView
        android:id="@+id/tvLoginTwitter"
        android:layout_width="217dp"
        android:layout_height="30dp"
        android:text="Log in To Twitter."
        android:textAppearance="@android:style/TextAppearance.Large"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/tvPasswordPrompt"
        android:layout_alignStart="@+id/tvPasswordPrompt"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/tvUsernamePrompt"
        android:layout_width="200dp"
        android:layout_height="21dp"
        android:layout_marginTop="11dp"
        android:paddingLeft="12dp"
        android:text="Phone, email, or username"
        android:layout_below="@+id/tvLoginTwitter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/lighter_grey"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="356dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvUsernamePrompt"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvPasswordPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/etUsername"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/lighter_grey"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="356dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/tvPasswordPrompt"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btForgotPassword"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:text="Forgot password?"
        android:fontFamily="sans-serif-light"
        android:background="@android:color/transparent"
        android:textColor="@color/medium_gray_50"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/etPassword"
        android:layout_toLeftOf="@+id/btSignUp"
        android:layout_toStartOf="@+id/btSignUp" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/twitter_blue"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="loginToRest"
        android:windowSoftInputMode= "adjustPan|adjustResize"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btLogin"
        android:layout_centerHorizontal="true"
        app:srcCompat="@color/medium_gray_50"
        android:layout_marginBottom="8dp"/>


</RelativeLayout>







